{
  "name": "thorax",
  "version": "1.3.0",
  "description": "Strengthening your Backbone",
  "keywords": ["mobile", "backbone"],
  "authors": [
    "Ryan Eastridge <ryan@syntacticx.com> (http://syntacticx.com)",
    "Kevin Decker <kpdecker@gmail.com> (http://incaseofstairs.com)"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/walmartlabs/thorax.git"
  },
  "engines": {
    "node": ">=0.4.7"
  },
  "dependencies": {
    "connect": "2.3.3",
    "underscore": "1.3.3",
    "mkdirp": "0.3.3",
    "async": "0.1.22",
    "fs-watch-tree": "0.2.0"
  },
  "scripts": {
    "start": "node bin/server.js . 8083",
    "test": "phantomjs bin/run-qunit.js 'http://localhost:8083/zepto.html' 'http://localhost:8083/jquery.html' 'http://localhost:8083/zepto-form.html' 'http://localhost:8083/jquery-form.html' 'http://localhost:8083/zepto-loading.html' 'http://localhost:8083/jquery-loading.html'"
  },
  "builds": {
    "base": {
      "files": {
        "lib/thorax.js": "thorax.js",
        "packages/loading/js/lib/thorax.loading.js": "thorax.loading.js"
      }
    },
    "boilerplate-html": {
      "directories": {
        "packages/boilerplate-html": "",
        "lib": "js/lib"
      }
    },
    "boilerplate-lumbar": {
      "directories": {
        "packages/boilerplate-lumbar": "",
        "lib": "js/lib"
      }
    },
    "hello-world-lumbar": {
      "builds": ["boilerplate-lumbar"],
      "directories": {
        "packages/hello-world": ""
      }
    },
    "kitchen-sink": {
      "builds": ["boilerplate-lumbar", "hello-world-lumbar"],
      "directories": {
        "packages/bootstrap": "",
        "packages/loading": "",
        "packages/form": "",
        "packages/admin": "",
        "lib": "public/admin/js/lib",
        "packages/form/js/lib": "public/admin/js/lib"
      }
    },
    "docs": {
      "builds": ["boilerplate-lumbar"],
      "directories": {
        "packages/bootstrap": "",
        "packages/loading": "",
        "packages/form": "",
        "packages/docs": ""
      }
    },
    "test": {
      "directories": {
        "packages/test": "",
        "lib": "js/lib"
      },
      "files": {
        "packages/loading/js/lib/thorax.loading.js": "js/lib/thorax.loading.js",
        "packages/form/js/lib/thorax.form.js": "js/lib/thorax.form.js",
        "packages/form/js/lib/thorax.form-validation.js": "js/lib/thorax.form-validation.js",
        "packages/form/js/lib/thorax.form-helpers.js": "js/lib/thorax.form-helpers.js"
      }
    }
  }
}
